{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Web (Next.js)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "restart": true,
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "API (FastAPI)",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/services/api",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload", "--port", "8080"],
      "env": {
        "MC_API_ENV": "dev"
      },
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack (Web + API)",
      "configurations": ["Web (Next.js)", "API (FastAPI)"]
    }
  ]
}
